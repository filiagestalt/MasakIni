<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_resep"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:id="@+id/card_troli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:paddingBottom="10dp"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/image_troli"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/dummy_img_resep" />

            <TextView
                android:id="@+id/tv_judul_resep_troli"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/image_troli"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="Judul Resep"
                android:textColor="@color/nliveo_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardView_deksripsiResep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_judul_resep_troli"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:singleLine="true"
                android:text="Deskripsi resep..."
                android:textColor="@color/greySubText"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/cardView_waktuMemasak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cardView_deksripsiResep"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/cardView_deksripsiResep"
                android:drawableLeft="@drawable/ic_timer"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="30 menit"
                android:textColor="@color/greySubText"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/cardView_tingkat_kesulitan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cardView_waktuMemasak"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/cardView_waktuMemasak"
                android:layout_toRightOf="@+id/cardView_waktuMemasak"
                android:drawableLeft="@drawable/ic_kesulitan"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="Sedang"
                android:textColor="@color/greySubText"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/cardView_untukBerapaOrang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cardView_tingkat_kesulitan"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/cardView_tingkat_kesulitan"
                android:layout_toRightOf="@+id/cardView_tingkat_kesulitan"
                android:text="5 orang"
                android:textColor="@color/greySubText"
                android:textSize="10sp"
                android:drawableLeft="@drawable/ic_forknknife"
                android:drawablePadding="5dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>