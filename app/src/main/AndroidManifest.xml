<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.baskom.masakini">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/splashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.WelcomeActivity" />
        <activity android:name=".activity.MasukActivity" />
        <activity android:name=".activity.BuatAkunActivity" />
        <activity android:name=".activity.InfoAkunActivity" />
        <activity android:name=".activity.RiwayatOrderActivity" />
        <activity android:name=".activity.TroliActivity" />
        <activity android:name=".activity.ResepDetilActivity" />
        <activity android:name=".activity.MainDrawerActivity" />
        <activity android:name=".activity.PembelianKonfirmasiActivity" />
        <activity android:name=".activity.PembelianSelesaiActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".activity.ItemKeranjangActivity"></activity>
    </application>

</manifest>